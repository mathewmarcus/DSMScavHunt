<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <Button
        android:layout_width="225dp"
        android:layout_height="225dp"
        android:id="@+id/start_button"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/view"
        android:background="@drawable/startarrow"
        android:layout_centerHorizontal="true"
        />


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:id="@+id/bulldog"
        android:background="@drawable/bulldog1"
        android:layout_below="@+id/scavBar"
        android:adjustViewBounds="true"
        android:layout_marginTop="-10dp"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/scavTriangle"
        android:background="@drawable/triangles"
        android:layout_below="@+id/bulldog"
        android:layout_marginTop="-60dp"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:id="@+id/scavBar"
        android:background="@drawable/logobar"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-20dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Directions"
        android:id="@+id/openingInfo"
        android:layout_below="@+id/scavTriangle"
        android:layout_centerHorizontal="true"/>




</RelativeLayout>

